{
	"name": "scribeai",
	"displayName": "ChatGPT & GPT extension - ScribeAI",
	"description": "ğŸš€ Use ChatGPT & GPT right inside VSCode to enhance and automate your coding with AI-powered assistance",
	"version": "1.2.1",
	"publisher": "AndrewZhang",
	"private": true,
	"icon": "resources/chatbot.png",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/colin4k/ScribeAI"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"sponsor": {
		"url": "https://ko-fi.com/pixelperfectlabs"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other",
		"Machine Learning",
		"Notebooks"
	],
	"keywords": [
		"chatgpt",
		"gpt3",
		"gpt3.5",
		"gpt4",
		"openai",
		"copilot",
		"ai",
		"refactor",
		"bard",
		"completion",
		"javascript",
		"typescript",
		"web development"
	],
	"galleryBanner": {
		"color": "#041621",
		"theme": "dark"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mywiki.createNote",
				"title": "Create Note",
				"enablement": "!commentIsEmpty"
			},
			{
				"command": "mywiki.replyNote",
				"title": "Create Note",
				"enablement": "!commentIsEmpty"
			},
			{
				"command": "mywiki.askAI",
				"title": "Ask AI",
				"enablement": "!commentIsEmpty"
			},
			{
				"command": "mywiki.aiEdit",
				"title": "AI Edit",
				"enablement": "!commentIsEmpty"
			},
			{
				"command": "mywiki.genDocString",
				"title": "Generate Docstring",
				"enablement": "true"
			},
			{
				"command": "mywiki.editNote",
				"title": "Edit",
				"icon": {
					"dark": "resources/edit_inverse.svg",
					"light": "resources/edit.svg"
				}
			},
			{
				"command": "mywiki.deleteNote",
				"title": "Delete",
				"icon": {
					"dark": "resources/close_inverse.svg",
					"light": "resources/close.svg"
				}
			},
			{
				"command": "mywiki.deleteNoteComment",
				"title": "Delete",
				"icon": {
					"dark": "resources/close_inverse.svg",
					"light": "resources/close.svg"
				}
			},
			{
				"command": "mywiki.saveNote",
				"title": "Save"
			},
			{
				"command": "mywiki.cancelsaveNote",
				"title": "Cancel"
			},
			{
				"command": "mywiki.dispose",
				"title": "Remove All Notes"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "mywiki.createNote",
					"when": "false"
				},
				{
					"command": "mywiki.replyNote",
					"when": "false"
				},
				{
					"command": "mywiki.askAI",
					"when": "false"
				},
				{
					"command": "mywiki.aiEdit",
					"when": "false"
				},
				{
					"command": "mywiki.genDocString",
					"when": "false"
				},
				{
					"command": "mywiki.deleteNote",
					"when": "false"
				},
				{
					"command": "mywiki.deleteNoteComment",
					"when": "false"
				}
			],
			"comments/commentThread/title": [
				{
					"command": "mywiki.deleteNote",
					"group": "navigation",
					"when": "commentController == comment-scribeai && !commentThreadIsEmpty"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "mywiki.createNote",
					"group": "inline@5",
					"when": "commentController == comment-scribeai && commentThreadIsEmpty"
				},
				{
					"command": "mywiki.replyNote",
					"group": "inline@4",
					"when": "commentController == comment-scribeai && !commentThreadIsEmpty"
				},
				{
					"command": "mywiki.askAI",
					"group": "inline@1",
					"when": "commentController == comment-scribeai"
				},
				{
					"command": "mywiki.aiEdit",
					"group": "inline@2",
					"when": "commentController == comment-scribeai"
				},
				{
					"command": "mywiki.genDocString",
					"group": "inline@3",
					"when": "commentController == comment-scribeai"
				}
			],
			"comments/comment/title": [
				{
					"command": "mywiki.editNote",
					"group": "group@1",
					"when": "commentController == comment-scribeai"
				},
				{
					"command": "mywiki.deleteNoteComment",
					"group": "group@2",
					"when": "commentController == comment-scribeai && comment == canDelete"
				}
			],
			"comments/comment/context": [
				{
					"command": "mywiki.cancelsaveNote",
					"group": "inline@1",
					"when": "commentController == comment-scribeai"
				},
				{
					"command": "mywiki.saveNote",
					"group": "inline@2",
					"when": "commentController == comment-scribeai"
				}
			]
		},
